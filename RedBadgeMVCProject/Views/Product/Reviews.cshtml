@model RedBadgeMVC.Models.ItemModels.ProductDetails

@{
    ViewBag.Title = "Reviews";
}

<h2>Reviews</h2>

<div>
    <h4>ProductDetails</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ItemImage)
        </dt>


        <td><img src="~/Image/@Html.DisplayFor(model => model.ItemImage)" width="200" /> </td>


        <dt>
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>

        <h2 class="font-effect-shadow-multiple" style="text-decoration:underline">Reviews</h2>
       
        <dl class="dl-horizontal">
            @foreach (var item in Model.Reviews)
            {


                <dt>@Html.DisplayNameFor(modelItem => item.Reviews)</dt>
                <dd>@Html.DisplayFor(modelItem => item.Reviews)</dd>

                <br />
            }

        </dl>



    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
