

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
 
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/MyMainLayout.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
     

    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-sm-6 col-xs-6">
                <div class="Logo ">
                    <h1><mark>Online</mark><b><i>Shopping App</i></b></h1>
                    <h3><a href="https://localhost:44353/"<b><i>Numidia Shop</i></b></a></h3>
                </div>
            </div>
          
        </div>
        <hr />
            <div class="=row">
                <div class="=row" col-md-12>
                    <dic class="nav-menus">
                        <ul class="nav nav-pills">
                            <li class="dropdown active">
                                <a class="dropdown-toggle" role="button" aria-expanded="false" href="#" data-toggle="dropdown">Home <span class="caret"></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    @*@if (User.Identity.IsAuthenticated)*@

                                    @*// {*@
                                    <li>@Html.ActionLink("Products", "Index", "Product")</li>
                                    <li>@Html.ActionLink("Categories", "Index", "Category")</li>
                                    <li>@Html.ActionLink("Stores", "Index", "Store")</li>
                                    <li>@Html.ActionLink("Reviews", "Index", "Review")</li>
                                    @*}*@
                                </ul>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>@Html.ActionLink("ShoppingCart", "Index", "Cart")</li>

                            @Html.Partial("_LoginPartial")

                        </ul>

                    </dic>

                </div>

            </div>
            <br />


        <br />
        <br />

            <div>
                @RenderBody()
                <hr />
                <div class="footer">
                    <p class="text-center">&copy; @DateTime.Now.Year - Numidia Shop Application</p>
                    <p class="text-center">By Amel Mallem  Louda</p>
                    <div class="col-md-6 col-sm-6 copyright-right">


                    </div>
                </div>
            </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
</html>
<style>
   
        .footer{
        position: fixed;
        left: 0;
        bottom: 0;
        width: 100%;
        background-color: rgb(22, 21, 21);
        color: white;
        text-align: center;
    }
    </style>



