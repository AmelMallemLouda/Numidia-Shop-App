@model IEnumerable<RedBadgeMVC.Models.CategoryModels.CategoryListItem>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia&effect=neon|outline|emboss|shadow-multiple">
<h2 class="font-effect-shadow-multiple">Our Categories</h2>

@if (User.IsInRole("Seller"))
{<p>
        @Html.ActionLink("Create New", "Create")
    </p>
}


<div class=" photo-gallery">
    <div class="container-fluid">
        <div class="px-lg-5">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                        <div class="bg-white img-rounded shadow-sm  " style="text-decoration: underline">
                            <br />
                            @Html.DisplayFor(modelItem => item.CategoryName)

                        </div>

                        <br />
                        @if (User.IsInRole("Seller"))
                        {

                            <div class="d-flex alighn-items-center justify-content-between rounded-pill bg-light px-3 py-2 mt-4">
                                @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.CategoryId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })
                            </div>
                        }
                        else
                        {
                            @*@if (User.IsInRole("customer"))
                                {*@
                    <div class="p-4">
                        @Html.ActionLink("Details", "Details", new { id = item.CategoryId })
                        

                    </div>
                            
                        }




                    </div>
                }



            </div>
        </div>

    </div>


</div>



