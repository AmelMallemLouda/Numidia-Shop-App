@model RedBadgeMVC.Models.CategoryModels.CategoryDetails

@{
    ViewBag.Title = "Details";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Sofia&effect=neon|outline|emboss|shadow-multiple">
<h2 class="font-effect-shadow-multiple" style="text-align:center"> Category Details</h2>

<div>
   
    <dl class="dl-horizontal">
        @*<dt>
            @Html.DisplayNameFor(model => model.CategoryId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryId)
        </dd>*@

        <dt>
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <br />
        <br />
    
        <h4 class="font-effect-shadow-multiple" style="text-underline-position"><b><i> Category Products:</i></b></h4>
        
        <dl class="dl-horizontal">
            @foreach (var item in Model.Items)
            {

                <dt>@Html.DisplayNameFor(modelItem => item.Name)</dt>
                <dd>@Html.DisplayFor(modelItem => item.Name)</dd>

                <dt>@Html.DisplayNameFor(modelItem => item.Price)</dt>
                <dd>@Html.DisplayFor(modelItem => item.Price)</dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ItemImage)
                </dt>
                <dd><img src="~/Image/@Html.DisplayFor(model => model.ItemImage)" width="150" /> </dd>
                <dd></dd>
                <dd>@Html.ActionLink("View Items", "Details", "Product", new { id = item.ProductId }, null)</dd>

                <br />
            }

        </dl>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CategoryId}) |
    @Html.ActionLink("Back to List", "Index")
</p>
